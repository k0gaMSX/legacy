#define LD_SP_into 0x73ED

char *sbrk(n)
  unsigned n;
{
  static unsigned result;

  inline(LD_SP_into, &result);
  if (result + _stklim < n)
    {
      fprintf(stderr,"\nheap full\n");
      return ERROR;
    }
  result   = -(_stklim + _SAFETY);
  _stklim -= n;
  return result;
}


