MODULE CPMRD;
(*
 * [PASLIB] @CPMRD - Read line from console.
 * Revisions:
 *
 *
 *)

TYPE
  IOBUF = RECORD
	    MAXLEN : BYTE;
	    RETLEN : BYTE;
	    IOBUF  : ARRAY [0..254] OF CHAR
	  END;

EXTERNAL FUNCTION @BDOS(FUNC,PARM:INTEGER):INTEGER;

PROCEDURE @CPMRD(VAR BUF:IOBUF);
VAR
  RESULT : INTEGER;
BEGIN
  RESULT := @BDOS(10,ADDR(BUF))
END;

MODEND.
