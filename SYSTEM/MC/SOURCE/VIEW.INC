	LD		A,(DOS_SRC_HANDLE)
	LD		B,A
	LD		DE,(CURR_COPY_CHUNK)
	LD		HL,3+7+67
	ADD		HL,DE
	EX		DE,HL
	LD		HL,(COPY_SIZE)
	CALL	DOS
	CP		ERR_EOF
	JR		Z,.EOF
	OR		A
	JP		NZ,.ERROR_LOAD
	JR		.FILL
