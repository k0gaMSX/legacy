	EXX
	PUSH		HL
	INC			HL
	LD			HL,VIEW_ITEM_FILENAME
	ADD			HL,DE
	EX			DE,HL
	POP			HL
	PUSH		HL
	INC			HL
	LD			B,13
	CALL		STRLESS
