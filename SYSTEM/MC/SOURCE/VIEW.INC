	PUSH		HL
	PUSH		DE
	EXX
	POP			DE
	POP			HL
	LD			BC,14
	ADD			HL,BC
	LD			A,(HL)
	LD			B,A
	LD			HL,VIEW_ITEM_ATTR
	ADD			HL,DE
	LD			C,(HL)
	;BC = ATTRIBUTES
	BIT			DIR_BIT,B
