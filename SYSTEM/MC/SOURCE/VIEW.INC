	LD		A,(CURR_COPY_CHUNK+2)
	CALL	PUT_P2
	EX		DE,HL
	LD		HL,(CURR_COPY_CHUNK)
	LD		(HL),E
	INC		HL
	LD		(HL),D
	INC		HL
