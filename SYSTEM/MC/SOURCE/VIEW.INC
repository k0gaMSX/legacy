	LD		BC,80*24
.LOOP:
	LD		A,' '
	LD		(HL),A
	INC		HL
	DEC		BC
	LD		A,B
	OR		C
	JR		NZ,.LOOP

	LD		HL,(FIRST_COPY_CHUNK)
	LD		DE,0
	LD		B,0
	LD		C,80
.READ:
	CALL	READCHAR
	JP		C,.EOF
	CP		$0D
	JP		Z,.READ
	CP		$0A
	JP		Z,.NEW_LINE
	CP		32
	JP		P,.INSERT
	LD		A,' '
.INSERT:
	LD		(HL),A
	INC		HL
	DEC		C
	LD		A,C
	OR		A
	JR		NZ,.NOT_LINE
.NEW_LINE:
	PUSH	BC
	LD		B,0
	ADD		HL,BC
	POP		BC
	LD		C,80
	INC		B
	LD		A,B
	CP		24
	RET		Z
.NOT_LINE:
	JP		.READ

