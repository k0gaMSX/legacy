	EX		DE,HL ; DE = size
	LD		HL,(CURR_COPY_CHUNK)
	XOR		A
	LD		(HL),A
	INC		HL
	LD		(HL),A
	INC		HL
	LD		(HL),A
	INC		HL
	LD		(HL),E
	INC		HL
