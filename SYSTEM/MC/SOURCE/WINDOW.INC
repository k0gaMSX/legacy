.ROOT:
	LD		A,(PAGE2)
	CALL	PUT_P2
	LD		IX,WINDOW_LIST
	LD		A,1
	LD		(SCAN_SIBLINGS),A
	CALL	WM_MOUSE_CLICK
	JR		C,.EXIT
.NOT_LCLICK:
		
.EXIT:

	RET
	
