%MACRO WALK HL,%N,%N
	%IF #1!=#2	
		%IF #1 < #2
			%IF #1 < #2-6
				PUSH	BC
				LD		BC,#2-#1
				ADD		HL,BC
				POP		BC
			%ELSE
				INC	HL
				WALK HL,#1+1,#2
			%ENDIF
		%ELSE
			%IF #1 > #2+6
				PUSH	BC
				LD		BC,#2-#1
				ADD		HL,BC
				POP		BC
			%ELSE
				DEC	HL
				WALK HL,#1-1,#2
			%ENDIF
		%ENDIF
	%ENDIF
%ENDMACRO

