	RET

SET_PALETTE:
	DI
	LD		A,(_VDPWR)
	INC		A
	LD		C,A

	LD		A,1 ; BLACK
	OUT		(C),A
	LD		A,16+128
	OUT		(C),A
	LD		HL,BLACK_PAL
	INC		C
	OUTI
	OUTI

	DEC		C
	LD		A,4 ; BLUE
	OUT		(C),A
	LD		A,16+128
	OUT		(C),A
	LD		HL,BLUE_PAL
	INC		C
	OUTI
	OUTI
	
	DEC		C
	LD		A,7 ; BLUE
	OUT		(C),A
	LD		A,16+128
	OUT		(C),A
	LD		HL,CYAN_PAL
	INC		C
	OUTI
	OUTI

	DEC		C
	LD		A,15 ; BLUE
	OUT		(C),A
	LD		A,16+128
	OUT		(C),A
	LD		HL,WHITE_PAL
	INC		C
	OUTI
	OUTI
		
	EI
	RET
	
