	LD		(MOUSE_RDOUBLECLICK),A
	LD		(MOUSE_RBUTTON),A
	LD		(MOUSE_LBUTTON),A
	
	LD		(SCR_CUR_PAGE),A

	LD		HL,-1
	LD		(CURSOR_POS),HL
		
	LD		HL,0
	LD		DE,$501B
	CALL	VIDEO_SET_CLIP

	RET
	
VIDEO_SET_CLIP:
; H: X
; L: Y
; D: W
; E: H
	BIT		7,H
	JR		Z,.CHECK_RIGHT				; LESS THAN 0 ?
	LD		A,D
	ADD		A,H
	JP		P,.STORE_W
.INVALID_CLIP:
	LD		HL,0						; INVALID CLIP
	LD		DE,0
	JP		.STORE_CLIP
.STORE_W:
	LD		D,A
.CHECK_RIGHT:
	LD		A,SCREEN_W
	SUB		H
	JP		M,.INVALID_CLIP				; OUT OF BOUNDS
	CP		D
	JP		P,.CHECK_UPPER
	LD		D,A
.CHECK_UPPER:
	BIT		7,L
	JR		Z,.CHECK_BOTTOM				; LESS THAN 0 ?
	LD		A,E
	ADD		A,L
	JP		P,.STORE_H
	JP		.INVALID_CLIP
.STORE_H:
	LD		E,A
.CHECK_BOTTOM:
	LD		A,SCREEN_H
	SUB		L
	JP		M,.INVALID_CLIP				; OUT OF BOUNDS
	CP		E
	JP		P,.STORE_CLIP
	LD		E,A
.STORE_CLIP:
	LD		(SCR_CLIP_Y),HL
	LD		(SCR_CLIP_H),DE
	RET
	
