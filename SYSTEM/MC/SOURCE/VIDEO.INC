PREMULT_INIT:
	LD		A,(PAGE2)
	CALL	PUT_P2

	LD		BC,SCREEN_H
	LD		HL,PREMULT_TBL	
.PREMULT_LOOP:
	LD		A,SCREEN_H
	SUB		C
	
	PUSH	BC
	PUSH	HL
	
	LD		H,A
	LD		E,80
	CALL	MULT8
	
	EX		DE,HL
	
	POP		HL
	POP		BC
	
	LD		(HL),E
	INC		HL
	LD		(HL),D
	INC		HL
	DEC		BC
	LD		A,C
	OR		B
	JR		NZ,.PREMULT_LOOP
	RET

